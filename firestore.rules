rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Email verifications - allow unauthenticated read and update for verification
    match /email_verifications/{verificationId} {
      allow read: if true;  // Anyone can read to verify email
      allow create: if request.auth != null;  // Only authenticated users can create
      allow update: if true;  // Allow unauthenticated update to mark token as used
      allow delete: if request.auth != null;  // Only authenticated users can delete
    }
    
    // Voters collection - allow unauthenticated write for email verification
    match /voters/{voterId} {
      allow read: if request.auth != null && request.auth.uid == voterId;
      allow read: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow create: if request.auth != null;  // For registration
      allow update: if true;  // Allow unauthenticated update for email verification
      allow delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Elections collection
    match /elections/{electionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Positions collection
    match /positions/{positionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Candidates collection
    match /candidates/{candidateId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Announcements collection
    match /announcements/{announcementId} {
      allow read: if request.auth != null;  // Any authenticated user (voters and admins) can read
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));  // Only admins can write
    }
    
    // Votes collection
    match /votes/{voteId} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow create: if request.auth != null;
      allow update: if false;  // Votes cannot be modified
      allow delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));  // Admins can delete for system reset
    }
    
    // Vote receipts collection
    match /vote_receipts/{receiptId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.voterId;
      allow read: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow create: if request.auth != null;
      allow update: if false;  // Receipts cannot be modified
      allow delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));  // Admins can delete for system reset
    }
  }
}
